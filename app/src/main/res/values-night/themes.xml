<resources>
    <!-- Base application theme. -->
    <style name="Theme.CryptocurrencyApp" parent="android:ThemeOverlay.Material.Dark.ActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="android:colorSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CryptocurrencyApp.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.CryptocurrencyApp.AppBarOverlay" parent="android:ThemeOverlay.Material.Dark.ActionBar" />

    <style name="Theme.CryptocurrencyApp.PopupOverlay" parent="android:Theme.Material.Light" />
